@model PresentAte.ViewModels.EssayViewModels.EssayModel

@{
    ViewData["Title"] = "Create Essay";
}

<h2>Create Essay</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ThemeId" class="control-label">Select Theme</label>
        <select asp-for="ThemeId" asp-items="Model.AvailableThemes" class="form-control">
            <option value="">-- Select a Theme --</option>
        </select>
        <span asp-validation-for="ThemeId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Content" class="control-label">Essay Content</label>
        <textarea asp-for="Content" class="form-control" rows="10"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit Essay" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
